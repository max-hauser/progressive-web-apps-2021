	<style type="text/css">
		body{
			background-color: #101010;
			color: #fff;
			margin: 0;
		}
		
		header {
			background-color: #000;
			padding: 1vw;
			position: fixed;
			width: 100vw;
			z-index: 999;
			text-align: center;
			top: 0;
			display: flex;
			justify-content: space-around;
			color: #fff;
			align-items: center;
		}
		
		header a{
			color: #fff;
			padding: 1vw;
			font-size: 1.5em;
			text-decoration: none;
		}
		
		.form {
			display: flex;
			align-items: center;
		}
		
		main.overview{
			width: 80%;
			padding-top: 100px;
			margin: 0px auto;
		}
		
		span {
			display: flex;
			width: 100%;
		}
		
		.card{
			margin: 25px 15px;
			display: inline-block;
		}

		
		main.overview .card a, .card button,
		main.artist .card a, .card button {
			width: 100%;
			display: inline-block;
			margin: 0px;
			border: none;
			padding: 15px;
			background: #f1f1f1;
			color: #000;
			text-decoration: none;
			text-align: center;
			font-family: sans-serif;
			font-size: 1em;  
		}
		
		main.overview .card a,
		main.artist .card a{
			background-color: green;
			color: #fff;
		}
		
		form{
			text-align: left;
		}
		
		input#search {
			border: none;
			color: #fff;
			background-color: #444242;
			border-top-right-radius: 5px;
			border-bottom-right-radius: 5px;
			border-left: 0px;
			margin-left: -11px;
			height: 100%;
		}
		
		input#query{
			padding: 5px;
			border: none;
			border-top-left-radius: 5px;
			border-bottom-left-radius: 5px;
		}
		</style>	
